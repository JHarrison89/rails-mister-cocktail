



<% if @cocktail.photo.attached? %>
<%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
<% end %>


<h1><%= @cocktail.name %> ğŸ¹</h1>
<div class="card card-body col-lg-6">
  <h3>Ingredients</h3>
  <ol>
    <% @cocktail.doses.each do |dose|  %>
      <li><%= dose.description %> | <%= link_to "delete", dose_path(dose), method: :delete %></li>
    <% end %>
  </ol>
</div>


<div class="card card-body col-lg-6 mt-5">
  <%= simple_form_for [@cocktail, @dose ] do |f| %>
   <%= f.input :description %>
   <%= f.association :ingredient, as: :select %>
   <%= f.button :submit, class: "btn btn-primary" %>
 <% end %>
</div>



