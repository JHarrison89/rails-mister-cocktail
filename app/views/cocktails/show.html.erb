


<% if @cocktail.photo.attached? %>
<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key %>')">
  <h1><%= @cocktail.name %> 🍹</h1>
</div>
<% else %>
  <h1><%= @cocktail.name %> 🍹</h1>
<% end %>

<div class="card card-body mt-5">
  <h3>Ingredients</h3>
  <ol>
    <% @cocktail.doses.each do |dose|  %>
      <li><%= dose.description %> | <%= link_to "delete", dose_path(dose), method: :delete %></li>
    <% end %>
  </ol>
</div>


<div class="card card-body mt-5">
  <%= simple_form_for [@cocktail, @dose ] do |f| %>
   <%= f.input :description %>
   <%= f.association :ingredient, as: :select %>
   <%= f.button :submit, class: "btn btn-primary" %>
 <% end %>
</div>



